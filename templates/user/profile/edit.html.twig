{% extends 'base.html.twig' %}

{% block title %}Edit my profile{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            {% include('form/flash_messages.html.twig') %}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h1>Edit {{ user.name }} profile</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {% form_theme form 'form/bootstrap_4_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}