{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-5">
        </div>
        <div class="col-2">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-5">
        </div>
        <div class="col-2">
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <input id="username" name="_username" class="form-control" value="{{ last_username }}" placeholder="Username"/>
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="_password" class="form-control" placeholder="Password"/>
                </div>
                <input type="hidden" name="_target_path" value="{{ path('user_profile') }}"/>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}